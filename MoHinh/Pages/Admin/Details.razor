@page "/admin/hinhs/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Chi tiết</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Hinh.HinhID</td></tr>
        <tr><th>Tên mô hình</th><td>@Hinh.TenMoHinh</td></tr>
        <tr><th>Mô tả</th><td>@Hinh.MoTa</td></tr>
        <tr><th>Thể loại</th><td>@Hinh.TheLoai</td></tr>
        <tr><th>Giá</th><td>@Hinh.Gia.ToString("C")</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Chỉnh sửa</NavLink>
<NavLink class="btn btn-secondary" href="/admin/hinhs">Trở về</NavLink>
@code {
    [Inject]
    public IMoHinhRepository Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Hinh Hinh { get; set; }
    protected override void OnParametersSet()
    {
        Hinh = Repository.Hinhs.FirstOrDefault(b => b.HinhID == Id);
    }
    public string EditUrl => $"/admin/hinhs/edit/{Hinh.HinhID}";
}
